<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/and"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Software Development"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/coc"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Android"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="iOS Apps"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Android is innovative apps, and games for the mobile terminal can be
built in Java language enviroment, Provides an application framework that fullfilling"
                android:textColor="#ffd5e8"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="The documents are display on the left side of the navigation detailed how to the build app using verity of Android API are listed"
                android:textColor="#ffd5e8"
                android:textStyle="bold"
                android:textSize="18dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:layout_gravity="bottom|center"

            />
    </LinearLayout>



</LinearLayout>